{% extends 'login.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-sm-12 col-lg-4 col-md-offset-4">
      <div class="well no-padding">
        <form action="{{ path('login_check') }}" method="post" id="login-form" class="smart-form client-form">
          <header>
            Sign In
          </header>
          <fieldset>

             {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endif %}
           
            {% if success %}
                <div class="alert alert-info">{{ success }}</div>
            {% endif %}

            <section>
              <label class="label">E-mail</label>
              <label class="input"> <i class="icon-append fa fa-user"></i>
                <input type="text" name="_username">
                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address/username</b></label>
            </section>

            <section>
              <label class="label">Password</label>
              <label class="input"> <i class="icon-append fa fa-lock"></i>
                <input type="password" name="_password">
                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b> </label>
              <div class="note">
                <a href="{{ path('_security_forgotPassword') }}">Forgot password?</a>
              </div>
            </section>

            <section>
              <label class="checkbox">
                <input type="checkbox" name="remember" checked="">
                <i></i>Stay signed in</label>
            </section>
          </fieldset>
          <footer>
            <button type="submit" class="btn btn-primary">
              Sign in
            </button>
          </footer>
        </form>

      </div>

    </div>
  </div>
{% endblock %}
